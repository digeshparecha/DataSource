<div class="text-end py-3">Total Number of Users: {{ users | size }}</div>
  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Created at</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
        <tr>
          <td>{{ user.name.title }} {{ user.name.first }} {{ user.name.last }}</td>
          <td>{{ user.age }}</td>
          <td>{{ user.gender }}</td>
          <td>{{ user.created_at | date: "%B %e, %Y %l:%M %p" }}</td>
          <td>
            <form class="button_to" method="post" action="{{ '/users/' | append: user.id }}">
              <input type="hidden" name="_method" value="delete" autocomplete="off">
              <button class="btn btn-danger" type="submit">Delete</button>
            </form>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
